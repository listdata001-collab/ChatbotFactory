modules = ["python-3.11", "web", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "ffmpeg-full", "glibcLocales", "libiconv", "openssl", "postgresql", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--worker-class", "gthread", "--workers", "4", "--threads", "8", "--timeout", "120", "--keepalive", "30", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BotFactory AI Frontend"

[[workflows.workflow]]
name = "BotFactory AI Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35417
externalPort = 3001

[[ports]]
localPort = 44953
externalPort = 3000

[agent]
expertMode = true
